<script>
  document.getElementById("contratame")?.addEventListener("click", () => {
    document.querySelectorAll(".icon").forEach((elemento) => {
      elemento.classList.remove("iconhover");
    });
    document?.querySelector(".g-contact")?.classList.add("contact-open");
  });

  const stats = [
    "{Desarrollador Web}",
    "Diseñador UI//UX",
    "-Digitalizador-",
    "Olivera.",
  ];

  let currentStatIndex = 0;

  const textoDinamico = document.getElementById(
    "texto-dinamico"
  ) as HTMLElement;

  function changeText() {
    textoDinamico.textContent = stats[currentStatIndex];
    currentStatIndex++;

    if (currentStatIndex === stats.length) {
      currentStatIndex = 0;
    }

    // Reiniciar la animación
    textoDinamico.style.animation = "none"; // Desactivar la animación
    void textoDinamico.offsetWidth; // Forzar un reflow para reiniciar la animación
    textoDinamico.style.animation = "typewriting 3s steps(30) forwards"; // Volver a activar la animación

    setTimeout(changeText, 4000);
  }

  changeText();
</script>
